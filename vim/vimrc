" pathogen
call pathogen#infect()
syntax on
filetype plugin indent on
set background=dark
colorscheme railscasts


set nocompatible
set linebreak
set number
set mouse=a
set foldmethod=marker
set foldlevelstart=1
set encoding=utf-8
set fileencodings=utf-8
set tags=./tags,./TAGS,tags,TAGS
set autoindent
set smartindent
set cindent
set shiftwidth=4
set wildignore=*.pyc
set ignorecase
set smartcase
set hlsearch
set incsearch
set shiftround
set history=1000
set undolevels=1000
set noswapfile
set nobackup
set linespace=3
set hidden

set tabstop=4 softtabstop=0 expandtab shiftwidth=4 smarttab

if has("cscope")
  set csto=0
  set cst
  set nocsverb
  set csverb
endif

" remove trailing whitespace on save
autocmd BufWritePre * :%s/\s\+$//e

" tmux
let g:tmux_navigator_no_mappings = 1

source \~/.vim/plugins-config.vim
