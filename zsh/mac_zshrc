
# homebrew binary
export PATH=/usr/local/bin:$PATH

# go
export GOPATH=$HOME/go
export PATH=$PATH:$HOME/go/bin
alias gob="go build -gcflags '-m -l'"
alias goi="go install ./..."
alias goprof="go tool pprof"

# nvm
export NVM_DIR=$HOME/.nvm
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

# rbenv
eval "$(rbenv init -)"

# virtualenvwrapper
source /usr/local/bin/virtualenvwrapper.sh

# homebrew z
source "$(brew --prefix)/etc/profile.d/z.sh"

# security
alias pscan="sudo netstat -plnt"

# k8s
alias k="kubectl"
alias kns="kubens"

# databases
alias mongo="docker run -it --rm mongo:latest mongo --host host.docker.internal"
alias mongoimport="docker run -it --rm -v $PWD:/temp mongo:latest mongoimport --host host.docker.internal"
alias mongod="docker run --rm -p 27017:27017 --name mongo bitnami/mongodb:latest"
alias redis-server="docker run --rm -p 6379:6379 --name redis redis:latest"
alias redis-cli="docker run -it --rm redis:latest redis-cli -h host.docker.internal -p 6379"
alias rabbit-server="docker run --rm -P --name rabbit -e RABBITMQ_ERLANG_COOKIE=steve rabbitmq:3-management"
alias rabbitctl="docker run --rm -e RABBITMQ_ERLANG_COOKIE=steve -e RABBITMQ_NODENAME=rabbit@host.docker.internal rabbitmq:3 bash"

